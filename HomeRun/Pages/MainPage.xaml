<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeRun.Pages.MainPage"
             Shell.NavBarIsVisible="false">

    <StackLayout>
        <Image Source="APP_HomeRun_Logo.png"></Image>

        <Frame BackgroundColor="Transparent" Padding="24" CornerRadius="0">
            <Label HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Button Text="Login" 
                BackgroundColor="Orange" 
                Padding="24" 
                CornerRadius="0"
                TextColor="White"
                FontSize="36"
                Margin="40"
                Clicked="ButtonMainToLogin" />

    </StackLayout>
</ContentPage>
